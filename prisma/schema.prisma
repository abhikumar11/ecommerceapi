generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Product{
  productid Int @id
  title String @db.VarChar(255)
  description String @db.VarChar(255)
  price  Float @db.DoublePrecision()
  available Boolean @db.Boolean
  category Category @relation(fields: [category_id],references: [categoryid])
  category_id Int 
  order Order[]
}
model Category{
  categoryid Int @id
  name String @db.VarChar(255)
  product Product[]
}
model User{
  email String @id @db.VarChar(255)
  password String @db.VarChar(255)
  order Order[]
}
model Order{
  orderid Int @id
  user  User @relation(fields: [user_id],references: [email])
  user_id String @db.VarChar(255)
  product Product @relation(fields: [product_id],references: [productid])
  product_id Int
  quantity Int
}